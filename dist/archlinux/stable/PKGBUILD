pkgname=pylibgamma
pkgver=1.0
pkgrel=1
pkgdesc="Display server abstraction layer for gamma ramps and Python 3"
arch=(i686 x86_64)
url="https://github.com/maandree/pylibgamma"
license=('GPL3')
depends=(python3 'libgamma>=0.3' glibc)
makedepends=(python3 'libgamma>=0.3' glibc make gcc cython coreutils pkg-config)
source=($url/archive/$pkgver.tar.gz)
sha256sums=(201eefe11f7e592bf439590752ffe1a4b376c577ae56f8ff3f58294422379108)


build() {
  cd "$srcdir/$pkgname-$pkgver"
  LDFLAGS=${LDFLAGS/--as-needed/}
  LDFLAGS=${LDFLAGS/,,/,}
  export LDFLAGS
  make PREFIX=/usr
}


package() {
  cd "$srcdir/$pkgname-$pkgver"
  make PREFIX=/usr install DESTDIR="$pkgdir"
}

